#!/bin/bash

set -e

git clone --depth=1 git://github.com/zenovich/runkit.git

pushd runkit

if [ $TRAVIS_PHP_VERSION = "5.6" ] ; then
    wget https://github.com/zenovich/runkit/pull/73.diff
    patch -p1 < 73.diff
fi

phpize
./configure
make
make install
popd

phpenv config-add test/travis.php.ini
